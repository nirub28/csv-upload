<link rel="stylesheet" href="/css/csvData.css" />

<title><%= title %></title>

<div class="top-div">
<h2 class="head2">CSV Data: <%= filename %></h2> 

<div class="search-div">
  <input type="text" id="search-input" placeholder="Search...">
</div>
</div>

<hr>
<table class="csv-table">
  <thead>
    <tr>
      <% headers.forEach(function(column) { %>
        <th>
          <%= column %>
          <div>
            <button class="sort-btn asc" data-column="<%= column %>">â–²</button>
          </div>
        </th>
      <% }); %>
    </tr>
  </thead>
  <tbody id="table-body">
    <% data.forEach(function(row) { %>
      <tr>
        <% headers.forEach(function(column) { %>
          <td data-column="<%= column %>"><%= row[column] %></td>
      <% }); %>
      </tr>
    <% }); %>  </tbody>
</table>

<div id="pagination-container">
  <ul id="pagination">
  </ul>
</div>

<script src="/js/csvData.js"></script>
